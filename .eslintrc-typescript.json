{
  "env": {
    "es2021": true,
    "jasmine": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],

  "ignorePatterns": [
    "**/*.mjs",
    "**/*.d.mts"
  ],

  "overrides": [
    {
      "files": [
        "**/*.mts"
      ]
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jasmine"
  ],
  "root": true,
  "rules": {
    "@typescript-eslint/explicit-function-return-type": ["error"]
  }
}
